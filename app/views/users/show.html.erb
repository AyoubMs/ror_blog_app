<div class="users">
  <div>
    <%= render @user %>
  </div>

  <div class="user-bio">
    <h4>Bio</h4>
    <p>
      <%= @user.bio %>
    </p>
  </div>

  <div>
    <% @posts.each_with_index do |post, index| %>
      <%= render partial: "posts/post" , locals: { post: post, index: index } %>
        <% end %>
  </div>

  <button type="button">See all posts</button>
</div>
